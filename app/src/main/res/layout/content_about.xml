<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_about"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.hardikgoswami.aviratv1.about.AboutActivity"
    tools:showIn="@layout/about_act">

    <ImageView
        android:id="@+id/iv_about_act"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/about_home"
        android:layout_marginTop="@dimen/about_margin_top"/>

    <TextView
        android:id="@+id/tv_about_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_about_act"
        android:layout_centerHorizontal="true"
        android:fontFamily="sans-serif"
        android:text="@string/about_us_title"
        android:textSize="@dimen/font_size_about_title" />

    <ScrollView
        android:layout_width="@dimen/about_tv_width"
        android:layout_height="match_parent"
        android:layout_below="@id/tv_about_title"
        android:layout_centerHorizontal="true"
        >

    <TextView
        android:id="@+id/tv_about_desc"
        android:layout_width="@dimen/about_tv_width"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_about_title"
        android:layout_centerHorizontal="true"
        android:fontFamily="sans-serif"
        android:textSize="@dimen/font_size_about_desc" />

    </ScrollView>
</RelativeLayout>
